##### 玩家

# 玩家信息
type playerInfo {
    # 玩家名称
    playerName: String!
    password: String!
    avatarPath: String!
    # 这里为了避免跨平台导致的解析错误，我们统一使用String传递上次登录时间
    lastLogin: String!
    # 如果authcation过期了却没有被renew，则代表玩家下线
    online: Boolean!
    contact: playerContact
    history: playerHistory!
}

# 玩家的联络方式
type playerContact {
    email: String
    phone: String
}

# 玩家的战绩数据
type playerHistory {
    # 胜利次数
    winTimes: Int!
    # 非胜利次数
    failTimes: Int!
    # 总次数
    totalGames: Int!
}

# 用户登录/注册/修改个人信息等请求的反馈
type playerInfoFeedback {
    success: Boolean!
    message: String
}