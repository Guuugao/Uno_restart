##### 玩家

# 玩家信息
type playerInfo {
    # 玩家名称
    playerName: String!
    # 唯一标识一个玩家
    playerID: ID!
    password: String!
    avatarPath: String!
    # 这里为了避免跨平台导致的解析错误，我们统一使用String传递上次登录时间
    lastLogin: String!
    # 如果authcation过期了却没有被renew，则代表玩家下线
    online: Boolean!
    contact: playerContact
    gameStatiscs: playerHistoryPlayInfo!
}

# 玩家的联络方式
type playerContact {
    email: String
    phone: String
}

# 玩家的战绩数据
type playerHistoryPlayInfo {
    # 胜利次数
    winTimes: Int!
    # 非胜利次数
    failTimes: Int!
    # 总次数
    totalGames: Int!
}

type playerInfoEditFeedback {
    success: Boolean!
    message: String
}

# 用户登录
type playerLoginFeedback {
    success: Boolean!
    authcation: ID!
    message: String
}

# 用户注册
type playerRegisterFeedback {
    success: Boolean!
    message: String
}